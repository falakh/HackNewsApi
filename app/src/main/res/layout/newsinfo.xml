<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <ProgressBar
        android:id="@+id/pbNewsInfoLoading"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/tvNewsTittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Judul" />

    <LinearLayout
        android:id="@+id/llCommentAndScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNewsTittle"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvViewCount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_baseline_chrome_reader_mode_24"
            android:drawablePadding="12dp"
            android:text="view" />

        <TextView
            android:id="@+id/tvLikeCount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_baseline_star_border"
            android:drawablePadding="12dp"
            android:text="llike" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/llCommentAndScore"
        android:layout_marginVertical="4dp"
        android:background="@color/colorPrimaryDark" />

</RelativeLayout>
